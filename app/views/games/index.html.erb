<div class="row">
  <div class="col-sm-6">
    <h1>Call of Duty</h1>
    <%= link_to "Add new Game", new_game_path, class: "btn btn-primary" %>
  </div>
  <div class="col-sm-6" style="padding-top:70px; text-align:right;" id="search_area">
    <%= render 'searchform' %>
  </div>
</div>

<hr>

<div class="all_games" style="padding-left: 20px; padding-right:25px; text-align:justify;">
  <h4><%= @games.total_count %> Results found</h4>

  <%= render 'games' %>
  <%= paginate @games%>
</div>
