<div class="form">
  <%= form_for @game, url: games_path do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control", placeholder: "Name of the game"%>
        </div>
        <div class="form-group">
          <%= f.label :description%>
          <%= f.text_area :description, size: "60x6", class: "form-control", placeholder: "Just brief the game"%>
        </div>
          <div class="form-group">
          <%= f.label :year%>
          <%= f.text_field :year, placeholder: "Game Released year", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :rate%>
          <%= f.text_field :rate, class: "form-control", placeholder: "Give your rating to this game (1 - 10)"%><br>
        </div>
        <div class="form-group">
          <%= f.submit "Add", class: "btn btn-success"%>
        </div>
  <% end %>
</div>
