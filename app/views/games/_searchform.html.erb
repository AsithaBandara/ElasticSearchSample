<div class="form-inline">
  <%= form_tag games_path, method: :get, role: "Search" do |f| %>
        <div class="form-group">
          <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Type anything"%>
        </div>
        <div class="form-group">
          <%= submit_tag "Search",name: nil, class: "btn btn-success"%>
        </div>
  <% end %>
</div>
